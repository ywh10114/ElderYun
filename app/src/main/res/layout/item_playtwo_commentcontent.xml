<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huasky.elderyun.common.utils.widget.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:minHeight="40dp"
            android:maxHeight="45dp"
            android:minWidth="40dp"
            android:maxWidth="45dp"
            android:id="@+id/circleview_playtwo_2"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_main_title_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_playtwo_infotop"
            android:layout_alignBaseline="@id/circleview_playtwo_2"
            android:layout_toRightOf="@id/circleview_playtwo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_playtwo_comenter"
                android:text=""
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#5093e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_playtwo_time"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_playtwo_comenter"
                android:textSize="14sp"
                android:layout_alignLeft="@id/txt_playtwo_comenter"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_playtwo_down"
                android:layout_alignParentRight="true"
                android:text="12"
                android:layout_alignTop="@id/txt_playtwo_comenter"
                android:textSize="16sp"
                android:textColor="@color/colorEditHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_playtwo_down"
                android:layout_alignTop="@id/txt_playtwo_comenter"
                android:layout_toLeftOf="@id/txt_playtwo_down"
                android:layout_alignBottom="@id/txt_playtwo_comenter"
                android:layout_marginRight="10dp"
                android:src="@drawable/down_twinkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_playtwo_up"
                android:layout_alignTop="@id/txt_playtwo_comenter"
                android:layout_alignBottom="@id/txt_playtwo_comenter"
                android:layout_toLeftOf="@id/img_playtwo_down"
                android:layout_marginRight="25dp"
                android:text="12"
                android:textColor="@color/colorEditHint"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_playtwo_up"
                android:layout_alignTop="@id/txt_playtwo_comenter"
                android:layout_alignBottom="@id/txt_playtwo_comenter"
                android:layout_toLeftOf="@id/txt_playtwo_up"
                android:layout_marginRight="10dp"
                android:src="@drawable/up_twinkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_playtwo_content"
            android:layout_alignLeft="@id/rl_playtwo_infotop"
            android:layout_below="@id/rl_playtwo_infotop"
            android:text="测试测试测试"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>